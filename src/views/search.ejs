<form class="max-w-lg mx-auto my-4">
  <div class="flex">
    <div class="relative w-full">
      <input
        type="search"
        id="search-dropdown"
        class="block p-2.5 w-full z-20 text-sm text-white rounded-xl border-2 border-solid border-white hover:border-red-400 hover:bg-gray-200 bg-gradient-to-b from-blue-400 to-blue-800"
        placeholder="Search..."
